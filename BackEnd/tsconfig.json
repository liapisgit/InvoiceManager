{
    "compilerOptions": {
      "esModuleInterop": true,
      "module": "commonjs",
      "target": "es2022",
  
      "rootDir": "src",
      "outDir": "dist",
  
      "types": ["node"],
      "resolveJsonModule": true,
      "sourceMap": true,
  
      "strict": true,
      "noUncheckedIndexedAccess": true,
      "exactOptionalPropertyTypes": true,
      "noUncheckedSideEffectImports": true,
  
      "moduleDetection": "force",
      "skipLibCheck": true
    },
    "include": ["src/**/*.ts", "*.ts"],
    "exclude": ["node_modules", "dist"]
  }
  